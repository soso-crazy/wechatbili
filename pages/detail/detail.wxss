/* pages/detail.wxss */
.video_info{
    margin-top: 10rpx;
}

.video_info video{
    width: 100%;
}

.video_title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
}

.video_detail{
    margin-top: 5rpx;
    font-size: 28rpx;
}

.video_detail text{
    margin-left: 5rpx;
}

.video_detail .author{
    color: #000;
}

.other_list{
    margin-top: 10rpx;
}

.item_other{
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.other_img_wrap{
    width: 38%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.other_info{
    width: 60%;
}

.other_title{
    font-size: 28rpx;
    color: pink;
}

.other_detail{
    font-size: 26rpx;
    color: #666;
}

.comment_wrap{
    margin-top: 10rpx;
}

.comment_title{
    padding: 10rpx;
    font-size: 28rpx;
}

.comment_item{
    margin-bottom: 10rpx;
    padding: 10rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #666;
}

.comment_user{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.comment_user image{
    width: 60%;
}

.comment_info{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.comment_detail{
    display: flex;
    justify-content: space-between;
}

.comment_detail .author{
    font-size: 28rpx;
    color: #000;
}

.comment_detail .date{
    color: #666;
    font-size: 24rpx;
}

.comment_content{
    font-size: 28rpx;
    color: #000;
}