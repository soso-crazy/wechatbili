page {
  color: #666;
  padding: 10rpx;
}

.nav_wrap {
}
.nav {
  white-space: nowrap;
  padding: 5rpx 0;
}

.nav_item {
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}

.nav_item.active {
  border-bottom: 5rpx solid #ff69b4;
}

.slides {
  margin-top: 10rpx;
}

.banner_swiper {
  height: 220rpx;
}

.banner_swiper navigator,
.banner_swiper image {
  height: 100%;
  width: 100%;
}

.video_wrap {
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
  justify-content: space-between;
}

.video_item {
  width: 48%;
  margin-bottom: 20rpx;
}

.video_img {
  position: relative;
}

.video_img image {
  width: 100%;
}

.video_info {
  position: absolute;
  left: 0;
  bottom: 10rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size: 24rpx;
}

.play_count,
.comment_count {
  position: relative;
  left: 10rpx;
  top: -5rpx;
}

.video_title {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
